{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist",
    "target": "esnext",
    "lib": ["DOM", "ES2015"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
