{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "declaration": true,
    "strict": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "lib": ["dom", "es2016"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
